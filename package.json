{
  "name": "videohub-monorepo",
  "version": "1.0.0",
  "description": "VideoHub monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start --workspace=@videohub/web",
    "dev": "npm run start --workspace=@videohub/web",
    "dev:server": "npm run dev --workspace=@videohub/server",
    "dev:cms": "npm run start --workspace=@videohub/cms",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "server": "npm run start --workspace=@videohub/server",
    "cms": "npm run start --workspace=@videohub/cms",
    "build": "npm run build --workspace=@videohub/web",
    "build:cms": "npm run build --workspace=@videohub/cms",
    "test": "npm run test --workspace=@videohub/web",
    "build:all": "npm run build --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "author": "",
  "license": "ISC"
}
